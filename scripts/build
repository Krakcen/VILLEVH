# echo -e "Purple: ${PURPLE}Lorem Ipsum ${NC}"

# echo -e "Cyan: ${CYAN}Lorem Ipsum ${NC}"

# echo -e "Yellow: ${YELLOW}Lorem Ipsum ${NC}"